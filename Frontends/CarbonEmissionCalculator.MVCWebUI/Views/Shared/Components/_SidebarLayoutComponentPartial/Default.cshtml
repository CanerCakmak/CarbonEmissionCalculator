<script>
    document.addEventListener('DOMContentLoaded', function() {
        const currentPath = window.location.pathname.toLowerCase();
        const menuItems = document.querySelectorAll('.menu-item');
        
        // Tüm menu-item'lardan active sınıfını kaldır
        menuItems.forEach(item => item.classList.remove('active'));
        
        // Ana sayfadaysa
        if (currentPath === '/' || currentPath === '/home' || currentPath === '/home/index') {
            document.getElementById('homeMenuItem').classList.add('active');
            return;
        }
        
        // Sabit Yanma sayfalarındaysa
        if (currentPath.includes('/calculation/fixedcombustion')) {
            document.getElementById('fixedCombustionMenuItem').classList.add('active');
            return;
        }
        
        // Mobil Yanma sayfalarındaysa
        if (currentPath.includes('/calculation/mobile')) {
            document.getElementById('mobileCombustionMenuItem').classList.add('active');
            return;
        }
        
        // Diğer sayfalar için
        menuItems.forEach(item => {
            const link = item.querySelector('.menu-link');
            if (link && link.getAttribute('href').toLowerCase() === currentPath) {
                item.classList.add('active');
            }
        });
    });
</script>