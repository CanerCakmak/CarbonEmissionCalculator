@{
    ViewData["Title"] = "Ana Sayfa";
}

<div class="container-xxl flex-grow-1 container-p-y">
    <!-- Kategori 1 Başlığı -->
    <div class="row mb-4">
        <div class="col">
            <h3 class="fw-bold py-3 mb-4">
                <i class="bx bx-calculator me-2"></i>
                Kategori 1 Hesaplamaları
            </h3>
        </div>
    </div>

    <!-- Kategori 1 Hesaplama Butonları -->
    <div class="row">
        <!-- Sabit Yanma -->
        <div class="col-md-6 col-lg-4 mb-4">
            <div class="card h-100">
                <div class="card-body text-center">
                    <div class="mb-3">
                        <i class="bx bxs-flame text-primary" style="font-size: 3rem;"></i>
                    </div>
                    <h5 class="card-title mb-4">Sabit Yanma</h5>
                    <a href="/Calculation/FixedCombustion" class="btn btn-primary">Hesapla</a>
                </div>
            </div>
        </div>

        <!-- Mobil Yanma -->
        <div class="col-md-6 col-lg-4 mb-4">
            <div class="card h-100">
                <div class="card-body text-center">
                    <div class="mb-3">
                        <i class="bx bx-car text-primary" style="font-size: 3rem;"></i>
                    </div>
                    <h5 class="card-title mb-4">Mobil Yanma</h5>
                    <a href="/Calculation/MobileCombustion" class="btn btn-primary">Hesapla</a>
                </div>
            </div>
        </div>

        <!-- Şirket Araçları -->
        <div class="col-md-6 col-lg-4 mb-4">
            <div class="card h-100">
                <div class="card-body text-center">
                    <div class="mb-3">
                        <i class="bx bx-car text-primary" style="font-size: 3rem;"></i>
                    </div>
                    <h5 class="card-title mb-4">Şirket Araçları</h5>
                    <a href="/Calculation/CompanyVehicles" class="btn btn-primary">Hesapla</a>
                </div>
            </div>
        </div>

        <!-- Soğutucu Gazlar -->
        <div class="col-md-6 col-lg-4 mb-4">
            <div class="card h-100">
                <div class="card-body text-center">
                    <div class="mb-3">
                        <i class="bx bx-wind text-primary" style="font-size: 3rem;"></i>
                    </div>
                    <h5 class="card-title mb-4">Soğutucu Gazlar</h5>
                    <a href="/Calculation/RefrigerantGases" class="btn btn-primary">Hesapla</a>
                </div>
            </div>
        </div>

        <!-- Atık Su Arıtma Tesisi -->
        <div class="col-md-6 col-lg-4 mb-4">
            <div class="card h-100">
                <div class="card-body text-center">
                    <div class="mb-3">
                        <i class="bx bx-water text-primary" style="font-size: 3rem;"></i>
                    </div>
                    <h5 class="card-title mb-4">Atık Su Arıtma Tesisi</h5>
                    <a href="/Calculation/WastewaterTreatment" class="btn btn-primary">Hesapla</a>
                </div>
            </div>
        </div>

        <!-- Karbon İçerikli Hammadde Prosesi -->
        <div class="col-md-6 col-lg-4 mb-4">
            <div class="card h-100">
                <div class="card-body text-center">
                    <div class="mb-3">
                        <i class="bx bx-box text-primary" style="font-size: 3rem;"></i>
                    </div>
                    <h5 class="card-title mb-4">Karbon İçerikli Hammadde Prosesi</h5>
                    <a href="/Calculation/CarbonContainingMaterial" class="btn btn-primary">Hesapla</a>
                </div>
            </div>
        </div>
    </div>

    <!-- Ayraç çizgisi -->
    <div class="row">
        <div class="col">
            <hr class="my-4" style="opacity: 0.25; margin: 2rem auto; border-width: 1px; border-color: #696cff;">
        </div>
    </div>

    <!-- Kategori 2 Başlığı -->
    <div class="row mb-4">
        <div class="col">
            <h3 class="fw-bold py-3 mb-4">
                <i class="bx bx-calculator me-2"></i>
                Kategori 2 Hesaplamaları
            </h3>
        </div>
    </div>

    <!-- Kategori 2 Hesaplama Butonları -->
    <div class="row">
        <!-- Elektrik -->
        <div class="col-md-6 col-lg-4 mb-4">
            <div class="card h-100">
                <div class="card-body text-center">
                    <div class="mb-3">
                        <i class="fas fa-bolt text-primary" style="font-size: 3rem;"></i>
                    </div>
                    <h5 class="card-title mb-4">Elektrik</h5>
                    <a href="/Calculation/Electricity" class="btn btn-primary">Hesapla</a>
                </div>
            </div>
        </div>
    </div>
</div>
