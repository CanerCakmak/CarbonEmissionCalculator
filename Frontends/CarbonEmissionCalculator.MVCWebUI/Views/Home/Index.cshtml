@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .card-icon {
        width: 48px;
        height: 48px;
        display: flex;
        align-items: center;
        justify-content: center;
        background-color: #fff;
        border-radius: 8px;
        box-shadow: 0 2px 6px rgba(0,0,0,0.1);
    }

    .card {
        transition: transform 0.2s;
    }

    .card:hover {
        transform: translateY(-5px);
    }

    .fa-car {
        color: #696cff;
    }

    .fa-snowflake {
        color: #03c3ec;
    }

    .fa-water {
        color: #007bff;
    }

    .fa-box {
        color: #ffab00;
    }
</style>

<div class="row">
    <div class="row align-items-stretch">
        <!-- Sabit Yanma Kartı -->
        <div class="col-lg-6 col-md-12 col-6 mb-4">
            <a href="/Calculation/FixedCombustion" class="text-decoration-none">
                <div class="card h-100">
                    <div class="card-body d-flex align-items-center">
                        <div class="d-flex align-items-center w-100">
                            <div class="card-icon me-4">
                                <img src="~/images/fire.png" alt="fire icon" style="width: 32px; height: 32px;" />
                            </div>
                            <div class="d-flex flex-column justify-content-center w-100">
                                <h3 class="card-title mb-0 text-center">Yakıtlar - Sabit Yanma</h3>
                            </div>
                        </div>
                    </div>
                </div>
            </a>
        </div>

        <!-- Mobil Yanma Kartı -->
        <div class="col-lg-6 col-md-12 col-6 mb-4">
            <a href="/Calculation/MobileCombustion" class="text-decoration-none">
                <div class="card h-100">
                    <div class="card-body d-flex align-items-center">
                        <div class="d-flex align-items-center w-100">
                            <div class="card-icon me-4">
                                <i class="fas fa-car fa-2x"></i>
                            </div>
                            <div class="d-flex flex-column justify-content-center w-100">
                                <h3 class="card-title mb-0 text-center">Şirket Araçları - Mobil Yanma</h3>
                            </div>
                        </div>
                    </div>
                </div>
            </a>
        </div>

        <!-- Soğutucu Gazlar Kartı -->
        <div class="col-lg-6 col-md-12 col-6 mb-4">
            <a href="/Calculation/RefrigerantGases" class="text-decoration-none">
                <div class="card h-100">
                    <div class="card-body d-flex align-items-center">
                        <div class="d-flex align-items-center w-100">
                            <div class="card-icon me-4">
                                <i class="fas fa-snowflake fa-2x"></i>
                            </div>
                            <div class="d-flex flex-column justify-content-center w-100">
                                <h3 class="card-title mb-0 text-center">Soğutucu Gazlar</h3>
                            </div>
                        </div>
                    </div>
                </div>
            </a>
        </div>

        <!-- Atık Su Arıtma Tesisi Kartı -->
        <div class="col-lg-6 col-md-12 col-6 mb-4">
            <a href="/Calculation/WastewaterTreatment" class="text-decoration-none">
                <div class="card h-100">
                    <div class="card-body d-flex align-items-center">
                        <div class="d-flex align-items-center w-100">
                            <div class="card-icon me-4">
                                <i class="fas fa-water fa-2x"></i>
                            </div>
                            <div class="d-flex flex-column justify-content-center w-100">
                                <h3 class="card-title mb-0 text-center">Atık Su Arıtma Tesisi</h3>
                            </div>
                        </div>
                    </div>
                </div>
            </a>
        </div>

        <!-- Karbon İçerikli Hammadde Prosesi Kartı -->
        <div class="col-lg-6 col-md-12 col-6 mb-4">
            <a href="/Calculation/CarbonContainingMaterial" class="text-decoration-none">
                <div class="card h-100">
                    <div class="card-body d-flex align-items-center">
                        <div class="d-flex align-items-center w-100">
                            <div class="card-icon me-4">
                                <i class="fas fa-box fa-2x"></i>
                            </div>
                            <div class="d-flex flex-column justify-content-center w-100">
                                <h3 class="card-title mb-0 text-center">Karbon İçerikli Hammadde Prosesi</h3>
                            </div>
                        </div>
                    </div>
                </div>
            </a>
        </div>
    </div>
</div>
