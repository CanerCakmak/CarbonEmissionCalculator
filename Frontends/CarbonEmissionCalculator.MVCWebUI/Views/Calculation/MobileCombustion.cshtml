@{
    ViewData["Title"] = "Mobil Yanma";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .card-icon {
        width: 48px;
        height: 48px;
        display: flex;
        align-items: center;
        justify-content: center;
        background-color: #fff;
        border-radius: 8px;
        box-shadow: 0 2px 6px rgba(0,0,0,0.1);
    }

    .card {
        transition: transform 0.2s;
    }

    .card:hover {
        transform: translateY(-5px);
    }

    .fa-car {
        color: #696cff;
    }

    .fa-truck {
        color: #ff6b6b;
    }
</style>

<div class="d-flex justify-content-between align-items-center">
    <h4 class="fw-bold py-3 mb-4">Şirket Araçları - Mobil Yanma</h4>
    <a href="/" class="btn btn-sm btn-secondary">
        <i class="fas fa-arrow-left me-1"></i>Geri
    </a>
</div>

<div class="row">
    <!-- On-Road Araçlar Kartı -->
    <div class="col-lg-4 col-md-6 col-12 mb-4">
        <a href="/Calculation/MobileOnRoad" class="text-decoration-none">
            <div class="card h-100">
                <div class="card-body d-flex align-items-center">
                    <div class="d-flex align-items-center w-100">
                        <div class="card-icon me-4">
                            <i class="fas fa-car fa-2x text-primary"></i>
                        </div>
                        <div class="d-flex flex-column justify-content-center w-100">
                            <h3 class="card-title mb-0 text-center">On-Road Araçlar</h3>
                        </div>
                    </div>
                </div>
            </div>
        </a>
    </div>

    <!-- Off-Road Araçlar Kartı -->
    <div class="col-lg-4 col-md-6 col-12 mb-4">
        <a href="/Calculation/MobileOffRoad" class="text-decoration-none">
            <div class="card h-100">
                <div class="card-body d-flex align-items-center">
                    <div class="d-flex align-items-center w-100">
                        <div class="card-icon me-4">
                            <i class="fas fa-truck fa-2x text-danger"></i>
                        </div>
                        <div class="d-flex flex-column justify-content-center w-100">
                            <h3 class="card-title mb-0 text-center">Off-Road Araçlar</h3>
                        </div>
                    </div>
                </div>
            </div>
        </a>
    </div>

    <!-- Özet Rapor Kartı -->
    <div class="col-lg-4 col-md-6 col-12 mb-4">
        <a href="/Calculation/MobileCombustionSummary" class="text-decoration-none">
            <div class="card h-100">
                <div class="card-body d-flex align-items-center">
                    <div class="d-flex align-items-center w-100">
                        <div class="card-icon me-4">
                            <i class="fas fa-chart-bar fa-2x text-info"></i>
                        </div>
                        <div class="d-flex flex-column justify-content-center w-100">
                            <h3 class="card-title mb-0 text-center">Özet Rapor</h3>
                        </div>
                    </div>
                </div>
            </div>
        </a>
    </div>
</div> 