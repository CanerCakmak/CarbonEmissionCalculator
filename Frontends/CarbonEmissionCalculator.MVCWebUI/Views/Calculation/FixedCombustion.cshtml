@{
    ViewData["Title"] = "Sabit Yanma";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .card-icon {
        width: 48px;
        height: 48px;
        display: flex;
        align-items: center;
        justify-content: center;
        background-color: #fff;
        border-radius: 8px;
        box-shadow: 0 2px 6px rgba(0,0,0,0.1);
    }

    .card {
        transition: transform 0.2s;
    }

    .card:hover {
        transform: translateY(-5px);
    }

    .menu-icon {
        font-size: 1.5rem;
    }
</style>

<div class="d-flex justify-content-between align-items-center">
    <h4 class="fw-bold py-3 mb-4">Sabit Yanma</h4>
    <a href="/" class="btn btn-sm btn-secondary">
        <i class="fas fa-arrow-left me-1"></i>Geri
    </a>
</div>

<div class="row">
    <!-- Doğalgaz Kartı -->
    <div class="col-lg-4 col-md-6 col-12 mb-4">
        <a href="/Calculation/FixedCombustionNaturalGas" class="text-decoration-none">
            <div class="card h-100">
                <div class="card-body d-flex align-items-center">
                    <div class="d-flex align-items-center w-100">
                        <div class="card-icon me-4">
                            <i class="fas fa-burn fa-2x text-danger"></i>
                        </div>
                        <div class="d-flex flex-column justify-content-center w-100">
                            <h3 class="card-title mb-0 text-center">Doğalgaz</h3>
                        </div>
                    </div>
                </div>
            </div>
        </a>
    </div>

    <!-- Dizel Kartı -->
    <div class="col-lg-4 col-md-6 col-12 mb-4">
        <a href="/Calculation/FixedCombustionDiesel" class="text-decoration-none">
            <div class="card h-100">
                <div class="card-body d-flex align-items-center">
                    <div class="d-flex align-items-center w-100">
                        <div class="card-icon me-4">
                            <i class="fas fa-gas-pump fa-2x text-primary"></i>
                        </div>
                        <div class="d-flex flex-column justify-content-center w-100">
                            <h3 class="card-title mb-0 text-center">Dizel</h3>
                        </div>
                    </div>
                </div>
            </div>
        </a>
    </div>

    <!-- Benzin Kartı -->
    <div class="col-lg-4 col-md-6 col-12 mb-4">
        <a href="/Calculation/FixedCombustionGasoline" class="text-decoration-none">
            <div class="card h-100">
                <div class="card-body d-flex align-items-center">
                    <div class="d-flex align-items-center w-100">
                        <div class="card-icon me-4">
                            <i class="fas fa-gas-pump fa-2x text-warning"></i>
                        </div>
                        <div class="d-flex flex-column justify-content-center w-100">
                            <h3 class="card-title mb-0 text-center">Benzin</h3>
                        </div>
                    </div>
                </div>
            </div>
        </a>
    </div>

    <!-- LPG Kartı -->
    <div class="col-lg-4 col-md-6 col-12 mb-4">
        <a href="/Calculation/FixedCombustionLPG" class="text-decoration-none">
            <div class="card h-100">
                <div class="card-body d-flex align-items-center">
                    <div class="d-flex align-items-center w-100">
                        <div class="card-icon me-4">
                            <i class="fas fa-flask fa-2x text-success"></i>
                        </div>
                        <div class="d-flex flex-column justify-content-center w-100">
                            <h3 class="card-title mb-0 text-center">LPG</h3>
                        </div>
                    </div>
                </div>
            </div>
        </a>
    </div>


</div> 