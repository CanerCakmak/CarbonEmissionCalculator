@{
    ViewData["Title"] = "Off-Road Araçlar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .card-icon {
        width: 48px;
        height: 48px;
        display: flex;
        align-items: center;
        justify-content: center;
        background-color: #fff;
        border-radius: 8px;
        box-shadow: 0 2px 6px rgba(0,0,0,0.1);
    }

    .card {
        transition: transform 0.2s;
    }

    .card:hover {
        transform: translateY(-5px);
    }

    .fa-truck {
        color: #696cff;
    }
</style>

<h4 class="fw-bold py-3 mb-4">
    <span class="text-muted fw-light">Mobil Yanma /</span> Off-Road Araçlar
</h4>

<div class="row">
    <!-- Dizel Kartı -->
    <div class="col-lg-4 col-md-6 col-12 mb-4">
        <a href="/Calculation/MobileOffRoadDiesel" class="text-decoration-none">
            <div class="card h-100">
                <div class="card-body d-flex align-items-center">
                    <div class="d-flex align-items-center w-100">
                        <div class="card-icon me-4">
                            <i class="fas fa-gas-pump fa-2x text-primary"></i>
                        </div>
                        <div class="d-flex flex-column justify-content-center w-100">
                            <h3 class="card-title mb-0 text-center">Dizel</h3>
                        </div>
                    </div>
                </div>
            </div>
        </a>
    </div>

    <!-- Benzin Kartı -->
    <div class="col-lg-4 col-md-6 col-12 mb-4">
        <a href="/Calculation/MobileOffRoadGasoline" class="text-decoration-none">
            <div class="card h-100">
                <div class="card-body d-flex align-items-center">
                    <div class="d-flex align-items-center w-100">
                        <div class="card-icon me-4">
                            <i class="fas fa-gas-pump fa-2x text-warning"></i>
                        </div>
                        <div class="d-flex flex-column justify-content-center w-100">
                            <h3 class="card-title mb-0 text-center">Benzin</h3>
                        </div>
                    </div>
                </div>
            </div>
        </a>
    </div>
</div> 