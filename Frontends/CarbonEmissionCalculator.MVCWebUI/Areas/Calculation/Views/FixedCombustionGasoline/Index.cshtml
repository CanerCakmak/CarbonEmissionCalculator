
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model IList<FixedCombustionGasolineCalculation>
<div class="content-wrapper">
    <!-- Content -->

    <div class="container-xxl flex-grow-1 container-p-y">
        <h4 class="fw-bold py-3 mb-4">
            <span class="text-muted fw-light">Sabit Yanma /</span>Benzin
            <div style="float:right;">
                <a href="/" class="btn btn-secondary me-2">
                    <i class="fas fa-arrow-left me-1"></i>Geri
                </a>
                <a class="btn btn-outline-primary" asp-area="Calculation" asp-controller="FixedCombustionGasoline" asp-action="Create">+Veri Ekle</a>
            </div>
        </h4>

        <!-- Basic Bootstrap Table -->
        <div class="card">
            <h5 class="card-header">Veriler</h5>
            <div class="table-responsive text-nowrap">
                <table class="table">
                    <thead>
                        <tr>
                            <th>Firm Name</th>
                            <th>ConsumptionAmount</th>
                            <th>Density</th>
                            <th>NetCaloricValue</th>
                            <th>CarbonOxidationFactor</th>
                            <th>Co2Factor</th>
                            <th>Ch4Factor</th>
                            <th>N2oFactor</th>
                            <th>TotalCO2e</th>
                            <th>TotalCO2eTon</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody class="table-border-bottom-0">
                        @if (Model.Any())
                        {


                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.FirmName</td>
                                    <td>@item.ConsumptionAmount</td>
                                    <td>@item.Density</td>
                                    <td>@item.NetCaloricValue</td>
                                    <td>@item.CarbonOxidationFactor</td>
                                    <td>@item.Co2Factor</td>
                                    <td>@item.Ch4Factor</td>
                                    <td>@item.N2oFactor</td>
                                    <td>@item.TotalCO2e</td>
                                    <td>@item.TotalCO2eTon</td>
                                    <td>
                                        <a asp-area="Calculation" asp-controller="FixedCombustionGasoline" asp-action="Detail" asp-route-id="@item.Id" class="btn p-0">
                                            <i class="bx bx-show"></i>
                                        </a>
                                        <a asp-area="Calculation" asp-controller="FixedCombustionGasoline" asp-action="Delete" asp-route-id="@item.Id" class="btn p-0">
                                            <i class="bx bx-x"></i>
                                        </a>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td>
                                    Veri Bulunamadı
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>

    </div>
</div>

