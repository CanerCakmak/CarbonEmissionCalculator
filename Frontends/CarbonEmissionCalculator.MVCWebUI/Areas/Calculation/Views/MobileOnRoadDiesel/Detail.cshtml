@using CarbonEmissionCalculator.Domain.Entities
@model MobileOnRoadDieselCalculation
@{
    ViewData["Title"] = "Detail";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card mb-4">
    <div class="card-header bg-white d-flex justify-content-between align-items-center">
        <h5 class="mb-0">On-Road Araçlar - Dizel</h5>
        <a href="/Calculation/MobileOnRoad" class="btn btn-sm btn-secondary">
            <i class="fas fa-arrow-left me-1"></i>Geri
        </a>
    </div>
    <div class="card-body">
        <form id="mobileOnRoadDieselForm" method="post">
            <div class="row">
                <div class="col-md-12 mb-3">
                    <label class="form-label">Firma İsmi</label>
                    <div class="input-group">
                        <input type="text" class="form-control" id="firmName" asp-for="FirmName" required />
                    </div>
                </div>

                <!-- Faaliyet Verisi -->
                <div class="col-md-6 mb-3">
                    <label class="form-label">Dizel Tüketim Miktarı Faaliyet Verisi (L)</label>
                    <div class="input-group">
                        <input type="number" step="0.01" class="form-control" id="consumptionAmount" asp-for="ConsumptionAmount" required />
                        <span class="input-group-text">L</span>
                    </div>
                </div>

                <!-- Yoğunluk -->
                <div class="col-md-6 mb-3">
                    <label class="form-label">Yoğunluk</label>
                    <div class="input-group">
                        <input type="number" step="0.01" class="form-control" id="density" asp-for="Density" value="0.85" />
                        <span class="input-group-text">kg/L</span>
                    </div>
                </div>

                <!-- Tüketim Miktarı (kg) -->
                <div class="col-md-6 mb-3">
                    <label class="form-label">Tüketim Miktarı</label>
                    <div class="input-group">
                        <input type="number" step="0.01" class="form-control" id="consumptionKg" asp-for="ConsumptionKg" readonly />
                        <span class="input-group-text">kg</span>
                    </div>
                </div>

                <!-- Tüketim Miktarı (Gg) -->
                <div class="col-md-6 mb-3">
                    <label class="form-label">Tüketim Miktarı</label>
                    <div class="input-group">
                        <input type="number" step="0.000001" class="form-control" id="consumptionGg" asp-for="ConsumptionGg" readonly />
                        <span class="input-group-text">Gg</span>
                    </div>
                </div>

                <!-- Net Kalorifik Değer -->
                <div class="col-md-6 mb-3">
                    <label class="form-label">Net Kalorifik Değer</label>
                    <div class="input-group">
                        <input type="number" step="0.01" class="form-control" id="netCaloricValue" asp-for="NetCaloricValue" value="43" />
                        <span class="input-group-text">TJ/Gg</span>
                    </div>
                </div>

                <!-- Tüketim Miktarı (TJ) -->
                <div class="col-md-6 mb-3">
                    <label class="form-label">Tüketim Miktarı</label>
                    <div class="input-group">
                        <input type="number" step="0.01" class="form-control" id="consumptionTJ" asp-for="ConsumptionTJ" readonly />
                        <span class="input-group-text">TJ</span>
                    </div>
                </div>

                <!-- Karbon Oksidasyon Faktörü -->
                <div class="col-md-6 mb-3">
                    <label class="form-label">Karbon Oksidasyon Faktörü</label>
                    <div class="input-group">
                        <input type="number" step="0.01" class="form-control" id="carbonOxidationFactor" asp-for="CarbonOxidationFactor" value="1.00" />
                    </div>
                </div>
            </div>

            <!-- Emisyon Faktörleri -->
            <div class="row mt-4">
                <h6 class="mb-3">Emisyon Faktörleri</h6>
                <div class="col-md-4 mb-3">
                    <label class="form-label">CO2</label>
                    <div class="input-group">
                        <input type="number" step="0.01" class="form-control" id="co2Factor" asp-for="Co2Factor" value="74100" />
                        <span class="input-group-text">kg/TJ</span>
                    </div>
                </div>
                <div class="col-md-4 mb-3">
                    <label class="form-label">CH4</label>
                    <div class="input-group">
                        <input type="number" step="0.01" class="form-control" id="ch4Factor" asp-for="Ch4Factor" value="3.9" />
                        <span class="input-group-text">kg/TJ</span>
                    </div>
                </div>
                <div class="col-md-4 mb-3">
                    <label class="form-label">N2O</label>
                    <div class="input-group">
                        <input type="number" step="0.01" class="form-control" id="n2oFactor" asp-for="N2oFactor" value="3.9" />
                        <span class="input-group-text">kg/TJ</span>
                    </div>
                </div>
            </div>

            <!-- Küresel Isınma Potansiyeli -->
            <div class="row mt-4">
                <h6 class="mb-3">Küresel Isınma Potansiyeli</h6>
                <div class="col-md-4 mb-3">
                    <label class="form-label">CO2 Küresel Isınma Potansiyeli</label>
                    <div class="input-group">
                        <input type="number" step="0.01" class="form-control" id="co2GWP" asp-for="Co2GWP" value="1" />
                        <span class="input-group-text">CO2e</span>
                    </div>
                </div>
                <div class="col-md-4 mb-3">
                    <label class="form-label">CH4 Küresel Isınma Potansiyeli</label>
                    <div class="input-group">
                        <input type="number" step="0.01" class="form-control" id="ch4GWP" asp-for="Ch4GWP" value="28" />
                        <span class="input-group-text">CO2e</span>
                    </div>
                </div>
                <div class="col-md-4 mb-3">
                    <label class="form-label">N2O Küresel Isınma Potansiyeli</label>
                    <div class="input-group">
                        <input type="number" step="0.01" class="form-control" id="n2oGWP" asp-for="N2oGWP" value="265" />
                        <span class="input-group-text">CO2e</span>
                    </div>
                </div>
            </div>

            <!-- Emisyon -->
            <div class="row mt-4">
                <h6 class="mb-3">Emisyon</h6>
                <div class="col-md-4 mb-3">
                    <label class="form-label">CO2</label>
                    <div class="input-group">
                        <input type="number" step="0.01" class="form-control" id="totalCO2" asp-for="TotalCO2" readonly />
                        <span class="input-group-text">kg</span>
                    </div>
                </div>
                <div class="col-md-4 mb-3">
                    <label class="form-label">CH4</label>
                    <div class="input-group">
                        <input type="number" step="0.01" class="form-control" id="totalCH4" asp-for="TotalCH4" readonly />
                        <span class="input-group-text">kg</span>
                    </div>
                </div>
                <div class="col-md-4 mb-3">
                    <label class="form-label">N2O</label>
                    <div class="input-group">
                        <input type="number" step="0.01" class="form-control" id="totalN2O" asp-for="TotalN2O" readonly />
                        <span class="input-group-text">kg</span>
                    </div>
                </div>
            </div>

            <!-- Toplam Emisyon -->
            <div class="row mt-4">
                <h6 class="mb-3">Toplam Emisyon</h6>
                <div class="col-md-6 mb-3">
                    <label class="form-label">CO2e</label>
                    <div class="input-group">
                        <input type="number" step="0.01" class="form-control" id="totalCO2e" asp-for="TotalCO2e" readonly />
                        <span class="input-group-text">kg</span>
                    </div>
                </div>
                <div class="col-md-6 mb-3">
                    <label class="form-label">CO2e</label>
                    <div class="input-group">
                        <input type="number" step="0.000001" class="form-control" id="totalCO2eTon" asp-for="TotalCO2eTon" readonly />
                        <span class="input-group-text">ton</span>
                    </div>
                </div>
            </div>

            <div class="row mt-4">
                <div class="col-12">
                    <button type="button" id="calculateButton" class="btn btn-primary">Hesapla</button>
                    <button type="reset" class="btn btn-secondary">Temizle</button>

                    <button type="submit" id="postToDb" class="btn btn-success" style="float:right;">Onayla Ve Kaydet</button>
                </div>
            </div>
        </form>
    </div>
</div>

