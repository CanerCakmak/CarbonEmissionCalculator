@using CarbonEmissionCalculator.Domain.Entities
@model CarbonEmissionCalculator.Domain.Entities.CarbonContainingMaterialCalculationGroup
@{
    ViewData["Title"] = "Detail";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="card">
    <div class="card-header bg-white d-flex justify-content-between align-items-center">
        <h5 class="mb-0">Karbon İçerikli Hammadde Prosesi</h5>
        <a href="/" class="btn btn-sm btn-secondary">
            <i class="fas fa-arrow-left me-1"></i>Geri
        </a>
    </div>
    <div class="card-body">
        <div class="mb-3">
            <strong>Firma İsmi:</strong> @Model.FirmName<br />
            <strong>Oluşturulma Tarihi:</strong> @Model.CreatedAt.ToString("yyyy-MM-dd HH:mm")<br />
            <strong>Toplam Emisyon (kg CO₂e):</strong> @Model.GrandTotalKg.ToString("F3")<br />
            <strong>Toplam Emisyon (Ton CO₂e):</strong> @Model.GrandTotalTon.ToString("F3")<br />
        </div>
        <div class="table-responsive text-nowrap">
            <table class="table table-bordered">
                <thead>
                    <tr class="text-center bg-light">
                        <th colspan="3">Hammadde</th>
                        <th colspan="3">Son Ürün</th>
                        <th>Hammadde - Son Ürün</th>
                        <th>Dönüşüm Faktörü</th>
                        <th colspan="2">Toplam Emisyon</th>
                    </tr>
                    <tr class="text-center bg-light">
                        <th>Faaliyet Verisi (ton)</th>
                        <th>Karbon Oranı (%)</th>
                        <th>Karbon Miktarı (ton)</th>
                        <th>Faaliyet Verisi (ton)</th>
                        <th>Karbon Oranı (%)</th>
                        <th>Karbon Miktarı (ton)</th>
                        <th>Ton C</th>
                        <th>Ton CO₂/Ton C</th>
                        <th>kg CO₂e</th>
                        <th>Ton CO₂e</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var row in Model.Rows)
                    {
                        <tr>
                            <td>@row.RawMaterialActivity</td>
                            <td>@row.RawMaterialCarbon</td>
                            <td>@row.RawMaterialCarbonAmount</td>
                            <td>@row.FinalProductActivity</td>
                            <td>@row.FinalProductCarbon</td>
                            <td>@row.FinalProductCarbonAmount</td>
                            <td>@row.TotalCarbon</td>
                            <td>@row.ConversionFactor</td>
                            <td>@row.TotalEmissionKg</td>
                            <td>@row.TotalEmissionTon</td>
                        </tr>
                    }
                </tbody>
                <tfoot>
                    <tr class="bg-light">
                        <td colspan="8" class="text-end fw-bold">TOPLAM</td>
                        <td><strong>@Model.GrandTotalKg.ToString("F3")</strong></td>
                        <td><strong>@Model.GrandTotalTon.ToString("F3")</strong></td>
                    </tr>
                </tfoot>
            </table>
        </div>
    </div>
</div>

