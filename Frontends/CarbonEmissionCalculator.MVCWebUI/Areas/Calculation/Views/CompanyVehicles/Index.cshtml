@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model IList<CompanyVehiclesCalculation>
<div class="content-wrapper">
    <!-- Content -->

    <div class="container-xxl flex-grow-1 container-p-y">
        <h4 class="fw-bold py-3 mb-4">
            <span class="text-muted fw-light">Şirket Araçları</span>
            <div style="float:right;">
                <a href="/" class="btn btn-secondary me-2">
                    <i class="fas fa-arrow-left me-1"></i>Geri
                </a>
                <a class="btn btn-outline-primary" asp-area="Calculation" asp-controller="CompanyVehicles" asp-action="Create">+Veri Ekle</a>
            </div>
        </h4>

        <!-- Basic Bootstrap Table -->
        <div class="card">
            <h5 class="card-header">Veriler</h5>
            <div class="table-responsive text-nowrap">
                <table class="table">
                    <thead>
                        <tr>
                            <th>Firm Name</th>
                            <th>Vehicle Type</th>
                            <th>Fuel Consumption</th>
                            <th>Fuel Type</th>
                            <th>Emission Factor</th>
                            <th>Total CO2</th>
                            <th>Total CO2 (Ton)</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody class="table-border-bottom-0">
                        @if (Model.Any())
                        {
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.FirmName</td>
                                    <td>@item.VehicleType</td>
                                    <td>@item.FuelConsumption</td>
                                    <td>@item.FuelType</td>
                                    <td>@item.EmissionFactor</td>
                                    <td>@item.TotalCO2</td>
                                    <td>@item.TotalCO2Ton</td>
                                    <td>
                                        <a asp-area="Calculation" asp-controller="CompanyVehicles" asp-action="Detail" asp-route-id="@item.Id" class="btn p-0">
                                            <i class="bx bx-show"></i>
                                        </a>
                                        <a asp-area="Calculation" asp-controller="CompanyVehicles" asp-action="Delete" asp-route-id="@item.Id" class="btn p-0">
                                            <i class="bx bx-x"></i>
                                        </a>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="8">
                                    Veri Bulunamadı
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>

    </div>
</div> 