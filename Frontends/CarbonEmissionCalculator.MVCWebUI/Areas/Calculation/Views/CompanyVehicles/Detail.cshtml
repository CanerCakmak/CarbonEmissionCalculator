@using CarbonEmissionCalculator.Domain.Entities
@model CarbonEmissionCalculator.Domain.Entities.CompanyVehiclesCalculationGroup
@{
    ViewData["Title"] = "Şirket Araçları Detay";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container-fluid px-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="mt-4">Şirket Araçları Detay</h2>
        <a href="/Calculation/CompanyVehicles" class="btn btn-secondary">
            <i class="fas fa-arrow-left me-1"></i>Geri
        </a>
    </div>
    <div class="card mb-4">
        <div class="card-body">
            <h5>Firma İsmi: @Model.Company.Name</h5>
            <h6>Oluşturulma Tarihi: @Model.CreatedAt.ToString("dd.MM.yyyy HH:mm")</h6>
            <div class="table-responsive">
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th>Araç Türü</th>
                            <th>Yakıt Türü</th>
                            <th>Mesafe (km)</th>
                            <th>kg CO₂/km</th>
                            <th>kg CH₄/km</th>
                            <th>kg N₂O/km</th>
                            <th style="min-width:130px">kg CO₂</th>
                            <th style="min-width:130px">kg CH₄</th>
                            <th style="min-width:130px">kg N₂O</th>
                            <th style="min-width:130px">kg CO₂e</th>
                            <th style="min-width:130px">ton CO₂e</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.Rows)
                        {
                            <tr>
                                <td>@item.VehicleType</td>
                                <td>@item.FuelType</td>
                                <td>@item.Distance</td>
                                <td>@item.EmissionFactorCO2</td>
                                <td>@item.EmissionFactorCH4</td>
                                <td>@item.EmissionFactorN2O</td>
                                <td>@item.EmissionCO2</td>
                                <td>@item.EmissionCH4</td>
                                <td>@item.EmissionN2O</td>
                                <td>@item.TotalCO2e</td>
                                <td>@item.TotalCO2eTon</td>
                            </tr>
                        }
                    </tbody>
                    <tfoot>
                        <tr>
                            <td colspan="9" class="text-end"><strong>TOPLAM</strong></td>
                            <td><strong>@Model.TotalCO2e kg</strong></td>
                            <td><strong>@Model.TotalCO2eTon ton</strong></td>
                        </tr>
                    </tfoot>
                </table>
            </div>
        </div>
    </div>
</div> 