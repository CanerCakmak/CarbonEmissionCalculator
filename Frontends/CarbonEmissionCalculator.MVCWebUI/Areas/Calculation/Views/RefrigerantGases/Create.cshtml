@section Scripts {
    <script>
        $(document).ready(function() {
            function calculateRow(row) {
                const quantity = parseFloat(row.find('.quantity').val()) || 0;
                const amount = parseFloat(row.find('.amount').val()) || 0;
                const leakPercentage = parseFloat(row.find('.leak-percentage').val()) || 0;
                const emissionFactor = parseFloat(row.find('.emission-factor').val()) || 0;

                // Calculate total amount
                const totalAmount = quantity * amount;
                row.find('.total-amount').val(totalAmount.toFixed(2));

                // Calculate leak amount
                const leakAmount = totalAmount * (leakPercentage / 100);
                row.find('.leak-amount').val(leakAmount.toFixed(2));

                // Calculate emissions
                const kgCO2e = leakAmount * emissionFactor;
                row.find('.kg-co2e').val(kgCO2e.toFixed(2));

                const tonCO2e = kgCO2e * 0.001;
                row.find('.ton-co2e').val(tonCO2e.toFixed(3));

                calculateTotals();
            }

            function calculateTotals() {
                let totalKgCO2e = 0;
                let totalTonCO2e = 0;

                $('.kg-co2e').each(function() {
                    totalKgCO2e += parseFloat($(this).val()) || 0;
                });

                $('.ton-co2e').each(function() {
                    totalTonCO2e += parseFloat($(this).val()) || 0;
                });

                $('#total-kg-co2e').val(totalKgCO2e.toFixed(2));
                $('#total-ton-co2e').val(totalTonCO2e.toFixed(3));
            }

            // Attach event handlers to input fields
            $('.quantity, .amount, .leak-percentage, .emission-factor').on('input', function() {
                calculateRow($(this).closest('tr'));
            });

            // Handle form submission
            $('#refrigerantGasesForm').on('submit', function(e) {
                e.preventDefault();
                // You can add additional logic here for form submission
                calculateTotals();
            });

            // Handle form reset
            $('#refrigerantGasesForm').on('reset', function() {
                setTimeout(function() {
                    $('tbody tr').each(function() {
                        calculateRow($(this));
                    });
                }, 0);
            });
        });
    </script>
