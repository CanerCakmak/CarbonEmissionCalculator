@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model IList<RefrigerantGasesCalculation>
<div class="content-wrapper">
    <!-- Content -->

    <div class="container-xxl flex-grow-1 container-p-y">
        <h4 class="fw-bold py-3 mb-4">
            <span class="text-muted fw-light">Soğutucu Gazlar</span>
            <a style="float:right;" class="btn btn-outline-primary" asp-area="Calculation" asp-controller="RefrigerantGases" asp-action="Create">+Veri Ekle</a>
        </h4>

        <!-- Basic Bootstrap Table -->
        <div class="card">
            <h5 class="card-header">Veriler</h5>
            <div class="table-responsive text-nowrap">
                <table class="table">
                    <thead>
                        <tr>
                            <th>Firm Name</th>
                            <th>Refrigerant Type</th>
                            <th>Refrigerant Amount</th>
                            <th>GWP Factor</th>
                            <th>Leakage Rate</th>
                            <th>Disposal Rate</th>
                            <th>Total CO2e</th>
                            <th>Total CO2e (Ton)</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody class="table-border-bottom-0">
                        @if (Model.Any())
                        {
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.FirmName</td>
                                    <td>@item.RefrigerantType</td>
                                    <td>@item.RefrigerantAmount</td>
                                    <td>@item.GWPFactor</td>
                                    <td>@item.LeakageRate</td>
                                    <td>@item.TotalCO2e</td>
                                    <td>@item.TotalCO2eTon</td>
                                    <td>
                                        <div class="dropdown">
                                            <button type="button" class="btn p-0 dropdown-toggle hide-arrow" data-bs-toggle="dropdown">
                                                <i class="bx bx-dots-vertical-rounded"></i>
                                            </button>
                                            <div class="dropdown-menu">
                                                <a class="dropdown-item" href="javascript:void(0);"><i class="bx bx-edit-alt me-1"></i> Edit</a>
                                                <a class="dropdown-item" href="javascript:void(0);"><i class="bx bx-trash me-1"></i> Delete</a>
                                            </div>
                                        </div>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="9">
                                    Veri Bulunamadı
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>

    </div>
</div> 